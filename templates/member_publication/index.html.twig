{% extends 'base.html.twig' %}

{% block title %}MemberPublication index{% endblock %}

{% block body %}
    <h1>MemberPublication index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Publication</th>
                <th>Author</th>
                <th>AuthorSequence</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for member_publication in member_publications %}
            <tr>
                <td>{{ member_publication.id }}</td>
                <td>
                    <a href="{{ path('publication_show', {'id': member_publication.publication.id}) }}">
                        {{ member_publication.publication }}
                    </a>
                </td>
                <td>
                    <a href="{{ path('member_show', {'id': member_publication.author.id}) }}">
                        {{ member_publication.author }}
                    </a>
                </td>
                <td>{{ member_publication.authorSequence }}</td>

                <td>
                    <a href="{{ path('member_publication_show', {'id': member_publication.id}) }}">show</a>
                    <a href="{{ path('member_publication_edit', {'id': member_publication.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('member_publication_new') }}">Create new</a>
{% endblock %}
