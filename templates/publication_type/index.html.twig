{% extends 'base.html.twig' %}

{% block title %}PublicationType index{% endblock %}

{% block body %}
    <h1>PublicationType index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for publication_type in publication_types %}
            <tr>
                <td>{{ publication_type.id }}</td>
                <td>{{ publication_type.type }}</td>
                <td>
                    <a href="{{ path('publication_type_show', {'id': publication_type.id}) }}">show</a>
                    <a href="{{ path('publication_type_edit', {'id': publication_type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('publication_type_new') }}">Create new</a>
{% endblock %}
